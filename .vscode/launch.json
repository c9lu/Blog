{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome against localhost",
            "type": "Edge",
            "request": "launch",
            "url": "http://localhost:6000",
            "webRoot": "${workspaceRoot}"
        },
        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "attach",
             
            "url": "http://localhost:3000",
            "port": 3000,
            "webRoot": "${workspaceRoot}"
        }
    ]
}